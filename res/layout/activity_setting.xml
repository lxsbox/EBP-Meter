<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_full"
    android:background="#f5f5f5"
    android:orientation="vertical" >
    <RelativeLayout
		android:id="@+id/title"
		android:layout_width="fill_parent"
		android:layout_height="40dip"
		android:background="#0099f1">
		<TextView
			android:id="@+id/myTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:gravity="center_horizontal|center_vertical"
			android:paddingBottom="10dip"
			android:paddingTop="10dip"
			android:textColor="@android:color/white"
			android:text="@string/setting"/>
		<ImageButton
	        android:id="@+id/back_2_main"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:layout_alignParentLeft="true"
	        android:layout_marginRight="10dp"
	        android:background="#0099f1"
	        android:src="@drawable/back_2_parent" />
	</RelativeLayout>

    <TableLayout
        style="@style/layout_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.6"
        android:background="@drawable/corners_bg"
        android:stretchColumns="3"
        >

        <TableRow
            style="@style/layout_horizontal"
            android:layout_weight="0.5" >
            <TextView
                android:layout_weight="9"
                android:text="用户设置"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="20sp" />
            <ImageButton
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_gravity="center_vertical"
                android:src="@drawable/setting_arrow"
                android:id="@+id/user_setting"/>
        </TableRow>
        <TableRow android:layout_weight="0.1" >
            <View
                android:layout_height="0.5dp"
                android:background="#d3d3d3" />
            <View
                android:layout_height="0.5dp"
                android:background="#d3d3d3" />
            <View
                android:layout_height="0.5dp"
                android:background="#d3d3d3" />
            <View
                android:layout_height="0.5dp"
                android:background="#d3d3d3" />
        </TableRow>

        <TableRow
            style="@style/layout_horizontal"
            android:layout_weight="0.5" >
            <TextView
                android:layout_weight="9"
                android:text="关联设备"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="20sp" />
            <ImageButton
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_gravity="center_vertical"
                android:src="@drawable/setting_arrow"
                android:id="@+id/register_dev" />
        </TableRow>
    </TableLayout>
    
    <TableLayout
        style="@style/layout_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.6"
        android:background="@drawable/corners_bg"
        android:stretchColumns="3"
        >
        <TableRow
            style="@style/layout_horizontal"
            android:layout_weight="0.5" >
            <TextView
                android:layout_weight="9"
                android:text="推送消息"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textSize="20sp" />
			<TextView
                android:layout_weight="9"
                android:text=""
                android:layout_gravity="center_vertical"/>
            <Switch
                android:layout_weight="1"
				android:id="@+id/openBuble"
				android:layout_gravity="center_vertical"
				android:layout_marginRight="10dp"
				android:textOff="不提示"
				android:textOn="提示" />
        </TableRow>
        <TableRow android:layout_weight="0.1" >
            <View
                android:layout_height="0.5dp"
                android:background="#d3d3d3" />
            <View
                android:layout_height="0.5dp"
                android:background="#d3d3d3" />
            <View
                android:layout_height="0.5dp"
                android:background="#d3d3d3" />
            <View
                android:layout_height="0.5dp"
                android:background="#d3d3d3" />
        </TableRow>
        
        <TableRow
            style="@style/layout_horizontal"
            android:layout_weight="0.5" >
            <TextView
                android:layout_weight="9"
                android:text="长期未使用提醒"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="20sp" />
            <TextView
                android:layout_weight="9"
                android:text=""
                android:layout_gravity="center_vertical"/>
            <Switch
                android:layout_weight="1"
				android:id="@+id/openNeverUse"
				android:layout_gravity="center_vertical"
				android:layout_marginRight="10dp"
				android:textOff="不提示"
				android:textOn="提示" />
        </TableRow>
    </TableLayout>
    
    <TableLayout
        style="@style/layout_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="60dp"
        android:layout_weight="1"
        android:background="@drawable/corners_bg"
        android:stretchColumns="3"
        >
        <TableRow
            style="@style/layout_horizontal"
            android:layout_weight="0.5" >
            <TextView
                android:layout_weight="9"
                android:text="意见反馈"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="20sp" />
            <ImageButton
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_gravity="center_vertical"
                android:src="@drawable/setting_arrow" />
        </TableRow>
        <TableRow android:layout_weight="0.1" >
            <View
                android:layout_height="0.5dp"
                android:background="#d3d3d3" />
            <View
                android:layout_height="0.5dp"
                android:background="#d3d3d3" />
            <View
                android:layout_height="0.5dp"
                android:background="#d3d3d3" />
            <View
                android:layout_height="0.5dp"
                android:background="#d3d3d3" />
        </TableRow>
        
        <TableRow
            style="@style/layout_horizontal"
            android:layout_weight="0.5" >
            <TextView
                android:layout_weight="9"
                android:text="分享"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="20sp" />
            <ImageButton
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_gravity="center_vertical"
                android:src="@drawable/setting_arrow" />
        </TableRow>
        <TableRow android:layout_weight="0.1" >
            <View
                android:layout_height="0.5dp"
                android:background="#d3d3d3" />
            <View
                android:layout_height="0.5dp"
                android:background="#d3d3d3" />
            <View
                android:layout_height="0.5dp"
                android:background="#d3d3d3" />
            <View
                android:layout_height="0.5dp"
                android:background="#d3d3d3" />
        </TableRow>
        
        <TableRow
            style="@style/layout_horizontal"
            android:layout_weight="0.5" >
            <TextView
                android:layout_weight="9"
                android:text="检查更新"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="20sp" />
            <ImageButton
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_gravity="center_vertical"
                android:src="@drawable/setting_arrow"
                android:id="@+id/check_update_Btn" />
        </TableRow>
    </TableLayout>

</LinearLayout>