<!--             android:layout_marginTop="@dimen/activity_vertical_margin" -->
<!--             android:text="好了"  -->
<!--             android:background="@android:color/holo_green_dark" -->
<!--             android:textColor="@android:color/white"/> -->

    </LinearLayout>


</RelativeLayout>