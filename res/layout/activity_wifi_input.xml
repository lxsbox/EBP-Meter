<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_full"
    android:background="#f5f5f5"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_weight="0.08"
        style="@style/layout_vertical"
        android:background="#0099f1">
        <ImageButton
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="10dp"
	        android:background="#0099f1"
	        android:src="@drawable/back_2_parent"
	        android:visibility="invisible"
	        android:id="@+id/back_2_parent"/>
        <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:gravity="center_horizontal|center_vertical"
			android:paddingBottom="10dip"
			android:paddingTop="10dip"
			android:text="设置  XXXXX 血压计"
			android:textColor="@android:color/white"
			android:id="@+id/wifi_input_title_text"/>
		<ImageButton
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:background="#0099f1"
	        android:src="@drawable/save" 
	        android:id="@+id/ok_wifi"/>
    </RelativeLayout>
	<TableLayout
	    android:layout_weight="0.92"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        style="@style/layout_vertical"
        android:background="#f5f5f5">
		<TableRow 
		    android:layout_weight="0.05"
		    style="@style/layout_horizontal">
		    <TextView
		        android:layout_weight="1"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:text="血压计使用者的 "
		        android:textColor="#fc7e7f"
		        android:visibility="visible"
		        android:id="@+id/red_top_hit"/>
		</TableRow>
		<TableRow 
		    android:layout_weight="0.1"
		    style="@style/layout_horizontal">
		    <EditText 
		        android:layout_weight="1"
		        android:layout_width="wrap_content"
		        android:layout_height="50dp"
		        android:layout_gravity="top"
	            android:inputType="textEmailAddress"
	            android:background="@drawable/edit_text_bg"
		        android:hint="Wifi Name"
		        android:id="@+id/wifi_name"/>
		</TableRow>
		<TableRow 
		    android:layout_weight="0.1"
		    style="@style/layout_horizontal">
		    <EditText
		        android:layout_weight="1"
		        android:layout_width="0dp"
		        android:layout_height="50dp"
		        android:layout_gravity="top"
	            android:inputType="textVisiblePassword"
	            android:background="@drawable/edit_text_bg"
	            android:hint="Wifi Password"
	            android:visibility="visible"
	            android:id="@+id/wifi_password"/>
		</TableRow>
		<TableRow
		    android:layout_weight="0.1"
		    style="@style/layout_horizontal">
		    <ProgressBar
            	android:id="@+id/write_wifi_progressBar"
            	android:layout_width="match_parent"
            	android:layout_height="25dp"
            	android:layout_weight="1" 
             	android:visibility="gone"/>
		</TableRow>
		<TableRow 
		    android:layout_weight="0.8"
		    style="@style/layout_horizontal">
		</TableRow>
		
	</TableLayout>
</LinearLayout>